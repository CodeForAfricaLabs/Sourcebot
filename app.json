{
  "name": "Sourcebot",
  "description": "An open source newsbot to help African news organisations deliver personalized news and engage more effectively via messaging platforms.",
  "repository": "https://github.com/EuropeanJournalismCommision/Sourcebot",
  "env": {
    "BOT_NAME": {
      "description": "BOT'S ACTUAL NAME.",
      "value": "secret"
    },
    "ACCESS_TOKEN": {
      "description": "Messenger ACCESS_TOKEN.",
      "value": "secret"
    },
    "VERIFY_TOKEN": {
      "description": "Messenger VERIFICATION_TOKEN.",
      "value": "secret"
    },
    "SENDGRID_API": {
      "description": "Send Grid API Key.",
      "value": "secret"
    },
    "WEBSITE_URL": {
      "description": "Link to the website where your content resides.",
      "value": "http://source.co.zw/"
    },
    "PROFILE_PIC_URL": {
      "description": "Link to your Facebook page's picture.",
      "value": "secret"
    }
  },
  "addons": [
	"heroku-postgresql:hobby-dev",
  "bonsai:sandbox-6",
  "sendgrid:starter",
  "memcachier:dev",
  "papertrail:choklad"
  ]
}